<Window
    x:Class="MTGAHelper.Tracker.WPF.Views.CardPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:MTGAHelper.Tracker.WPF.ViewModels"
    Width="320"
    d:DataContext="{d:DesignInstance viewModels:CardPopupVM}"
    Background="{StaticResource BackgroundBrush}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Image Source="{Binding ImageCardUrl, TargetNullValue='pack://application:,,,/Assets/Images/thumbnailUnknown.png'}" />
</Window>
